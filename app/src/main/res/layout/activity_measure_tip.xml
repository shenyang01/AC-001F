<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <com.zxcn.imai.smart.ui.HeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/title_measure_tip" />

    <TextView
        android:id="@+id/card_name"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/font_black"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/card_number"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/font_black"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_btn_login_top_margin"
        android:gravity="center"
        android:text="@string/measure_tip_title"
        android:textColor="@color/font_body"
        android:textSize="@dimen/font_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/measure_tip_img_top_margin"
        android:scaleType="centerInside"
        android:src="@drawable/tips_pic" />

    <RelativeLayout
        android:id="@+id/rl_nextTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nextTV"
            style="@style/BlueBtn"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/main_divider_top_margin"
            android:text="@string/btn_next"
            android:textSize="@dimen/font_content" />
    </RelativeLayout>

</LinearLayout>