<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="6dp"
        android:orientation="vertical" >

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/wifi_conn_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="11111"
             android:textColor="@android:color/black"
             android:textSize="14sp" />
         <TextView
             android:layout_below="@+id/wifi_conn_name"
             android:id="@+id/wifi_conn_status"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:textColor="@android:color/black"
             android:textSize="14sp" />
         <TextView
             android:id="@+id/wifi_conn_wpe"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/wifi_conn_status"
             android:text="11111"
             android:textColor="@android:color/black"
             android:textSize="14sp" />
     </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/wifi_conn_look"
        android:layout_width="wrap_content"
        android:src="@mipmap/look"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/wifi_conn_level"
        android:layout_width="wrap_content"
        android:src="@mipmap/wifi"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>