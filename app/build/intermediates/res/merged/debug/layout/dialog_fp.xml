<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="30dp"
        android:background="@drawable/shape_white_round"
        android:orientation="vertical">
        <TextView
            android:id="@+id/contentTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/font_body"
            android:textSize="@dimen/font_content"/>

        <TextView
            android:id="@+id/backTV"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dialog_btn_width"
            android:layout_height="@dimen/dialog_btn_height"
            android:layout_marginTop="@dimen/activity_left_margin"
            android:gravity="center"
            android:text="@string/title_back"
            android:textSize="@dimen/font_content"
            android:textColor="@color/font_white"
            android:background="@drawable/shape_blue_corner"/>
    </LinearLayout>
</LinearLayout>