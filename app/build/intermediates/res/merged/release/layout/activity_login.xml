<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">
    <com.zxcn.imai.smart.ui.HeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/title_phone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/login_input_top_margin"
            android:layout_marginLeft="@dimen/login_input_left_margin"
            android:layout_marginRight="@dimen/login_input_left_margin"
            android:background="@drawable/shape_input"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_input_icon_left_padding"
                android:src="@drawable/shouji"/>
            <EditText
                android:id="@+id/phoneET"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/login_input_icon_right_padding"
                android:hint="@string/hint_user_phone"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textColorHint="@color/font_hint"
                android:textSize="@dimen/font_content"
                android:textColor="@color/font_body"
                android:inputType="phone"
                android:singleLine="true"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/login_input_code_top_margin"
            android:layout_marginLeft="@dimen/login_input_left_margin"
            android:layout_marginRight="@dimen/login_input_left_margin"
            android:background="@drawable/shape_input"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_input_icon_left_padding"
                android:src="@drawable/mima"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/codeET"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/login_input_icon_right_padding"
                    android:hint="@string/hint_user_valid"
                    android:textCursorDrawable="@drawable/shape_edit_cursor"
                    android:textColorHint="@color/font_hint"
                    android:textSize="@dimen/font_content"
                    android:textColor="@color/font_body"
                    android:inputType="number"
                    android:singleLine="true"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/getCodeTV"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:layout_width="@dimen/login_btn_get_code_width"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/login_btn_get_code_top_margin"
                    android:layout_marginBottom="@dimen/login_btn_get_code_top_margin"
                    android:layout_marginRight="@dimen/login_btn_get_code_right_margin"
                    android:text="@string/btn_get_code"
                    android:textSize="@dimen/font_tip"
                    android:enabled="true"
                    android:textColor="@color/selector_get_code_status"
                    android:background="@drawable/shape_blue_bord_round2"/>
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/nextTV"
            style="@style/BlueBtn"
            android:layout_marginTop="@dimen/login_btn_login_top_margin"
            android:layout_marginLeft="@dimen/login_input_left_margin"
            android:layout_marginRight="@dimen/login_input_left_margin"
            android:text="@string/btn_login"
            android:textColor="@color/font_white"
            android:textSize="@dimen/font_content"/>
</LinearLayout>